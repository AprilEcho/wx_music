.viewContainer .header {
  display: flex;
  padding: 10rpx;
}

.viewContainer .header image {
  height: 60rpx;
  width: 60rpx;
}

.viewContainer .header .search {
  border: 1rpx solid #eee;
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #d43c33;
}

/*导航区域样式*/
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 80rpx;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navItem .active {
  border-bottom: 1rpx solid #d43c33;
}

.viewScroll {
  height: calc(100vh - 162rpx);
}

/*视频列表*/
.viewItem {
  padding: 0 3%;
}

